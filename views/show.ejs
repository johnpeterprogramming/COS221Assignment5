<h3>Manage Show</h3>
<div class="movie-block">
    <div class="pic-block">
        <img src="<%=show.PosterUrl%>">
    </div>
    <div class="form-block-outer">
        <div class="form-block-inner">
            <div class="heading-block">
                <p>Title:</p>
                <p>Director:</p>
                <p>ReleaseDate:</p>
                <p>Genre:</p>
                <p>Seasons:</p>
                <p>Episodes:</p>
                <p>Views:</p>
            </div>
            <div class="update-block">
                <form action="/show/update/<%= show.CatalogID %>" method="post">
                    <input type="text" name="Title" id="Title" value="<%= show.Title %>"><br>
                    <input type="text" name="Director" id="Director" value="<%= show.Director %>"><br>
                    <input type="year" name="ReleaseDate" id="ReleaseDate"><br>
                    <input type="text" name="Genre" id="Genre" value="<%= show.Genre %>"><br>
                    <input type="text" name="Seasons" id="Seasons" value="<%= show.Seasons %>"><br>
                    <input type="text" name="Episodes" id="Episodes" value="<%= show.Episodes %>"><br>
                    <input type="text" name="views" id="views" value="<%= show.Views %>" disabled>
                    <input type="submit" value="Update Details" id="updatebtn">
                </form>
            </div>
        </div>
        <div class="delete-block">
            <div class="delete-text">
                <p>Delete:</p>
            </div>
            <div class="delete-btn">
                <form action="/show/delete/<%= show.CatalogID %>" method="post">
                    <input type="submit" value="DELETE" class="btn btn-danger">
                </form>
            </div>
        </div>
    </div>
</div>

<% if (actors.length > 0) { %>
    <h3 class="mt-5">Actors:</h2>
    <div class="movie-block">
        <div>
            <% actors.forEach(actor => { %>
                <p><%= actor.FName %> <%= actor.LName %></p>
            <% }) %>
        </div>
    </div>
<% } %>

<script>
    let release_date = "<%= show.ReleaseDate %>";

    // Convert string to date
    let date = new Date(release_date);
    document.getElementById("ReleaseDate").value = date.getFullYear();
</script>

